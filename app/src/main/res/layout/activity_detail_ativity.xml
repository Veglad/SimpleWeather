<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">

    <TextView
            android:text="@string/celsius_mark"
            android:textSize="45sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/detailMinTemperatureTextView"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/detailMinTemperatureTextView"
            android:id="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/detailMaxTemperatureTextView"
            tools:text="18"
            android:textSize="90sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detailMinTemperatureTextView"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5"/>

    <TextView
            android:text="@string/celsius_mark"
            android:textSize="90sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/detailMaxTemperatureTextView"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/detailMaxTemperatureTextView"
            android:id="@+id/textView5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/detailMinTemperatureTextView"
            tools:text="3"
            android:textSize="45sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/detailMaxTemperatureTextView"
            app:layout_constraintBottom_toTopOf="@+id/imageCardView"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>

    <android.support.v7.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:cardCornerRadius="40dp"
            app:cardElevation="12dp">

        <ImageView
                android:layout_width="64dp" android:layout_height="64dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/detailImage"
                android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:cardCornerRadius="15dp"
            android:id="@+id/cardView"
            app:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DetailActivity">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="London"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/detailCityTextView" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21.01.2019"
                    android:textSize="20sp"
                    android:id="@+id/detailDateTextView"
                    app:layout_constraintTop_toBottomOf="@+id/detailCityTextView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/gray"
                  app:layout_constraintTop_toBottomOf="@+id/detailDateTextView" android:layout_marginTop="16dp"
                  android:id="@+id/view"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Clear sky"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/detailDescriptionTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/cardView2"/>

            <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="15dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                android:id="@+id/cardView2" app:cardElevation="0dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62"/>

</android.support.constraint.ConstraintLayout>